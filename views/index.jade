  .row
    #left.large-6.columns

      if cmc
        #cmc.school
          | <a name="cmc"> </a>
          h1.cmc cmc

          if cmc.breakfast
            h2 breakfast
            h5 7:30am - 9:30am
            ol
            - for (var i = 0; i < cmc.breakfast.length; ++i)
              li= cmc.breakfast[i]

          if cmc.brunch
            h2 brunch
            h5 10:30am - 12:30pm

            ol
            - for (var i = 0; i < cmc.brunch.length; ++i)
              li= cmc.brunch[i]

          if cmc.lunch
            h2 lunch
            h5 11am - 1pm
            ol
            - for (var i = 0; i < cmc.lunch.length; ++i)
              li= cmc.lunch[i]

          h2 dinner
          //- TODO: ON WEEKENDS THIS CHANGES (4:30 - 6:30)
          h5 5pm - 7pm
          ol
          - for (var i = 0; i < cmc.dinner.length; ++i)
            li= cmc.dinner[i]

